<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Dynamic Geo Map</masterLabel>
    <description>Displays a map using Geolocation, Lat/Lon, or Text Address.</description>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="cardTitle" type="String" label="Card Title" default="Location Map" />
            <property name="cardIcon" type="String" label="Card Icon" default="custom:custom54" />
            <property name="zoomLevel" type="Integer" label="Zoom Level (1-20)" default="10" />

            <property name="sourceMode" type="String" label="Data Source Type" datasource="compound,separate,address" default="compound" description="Select 'address' to let the map resolve location from text fields." />

            <property name="compoundFieldName" type="String" label="Compound Field API Name" default="Geolocation__c" />
            
            <property name="latFieldName" type="String" label="Lat Field API Name" default="BillingLatitude" />
            <property name="lonFieldName" type="String" label="Lon Field API Name" default="BillingLongitude" />

            <property name="streetField" type="String" label="Address: Street API Name" default="MailingStreet" />
            <property name="cityField" type="String" label="Address: City API Name" default="MailingCity" />
            <property name="stateField" type="String" label="Address: State API Name" default="MailingState" />
            <property name="postalCodeField" type="String" label="Address: Zip/Postal API Name" default="MailingPostalCode" />
            <property name="countryField" type="String" label="Address: Country API Name" default="MailingCountry" />

        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>